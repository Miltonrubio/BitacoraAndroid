<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/textViewNombreUsuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:background="@drawable/roundedbackgroundgris"
        android:hint="Nombre de usuario"
        android:padding="16dp"
        android:textSize="18dp" />

    <EditText
        android:id="@+id/textViewCorreoUsuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:background="@drawable/roundedbackgroundgris"
        android:hint="Correo De usuario"
        android:padding="16dp"
        android:textSize="18dp" />

    <EditText
        android:id="@+id/TextViewClaveUsuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:background="@drawable/roundedbackgroundgris"
        android:hint="Clave de usuario"
        android:padding="16dp"
        android:textSize="18dp" />

    <EditText
        android:id="@+id/TextViewTelefonoUsuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:background="@drawable/roundedbackgroundgris"
        android:hint="Telefono"
        android:padding="16dp"
        android:textSize="18dp" />

    <Spinner
        android:id="@+id/spinnerRolUsuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:textSize="18dp" />
</LinearLayout>
